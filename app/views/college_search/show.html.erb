<div class="w-full grid gap-5 justify-center">
  <div class="w-[400px] grid gap-4">
    <%= form_with url: college_search_path, method: :post, data: { turbo_method: :post } do |f| %>
      <div class="grid gap-2">
        <div class="grid gap-1">
          <%= f.label :name, "College name", class: "block text-sm font-medium text-gray-900" %>
          <%= f.text_field :name,
            placeholder: "Search for a college",
            class: class_names(
              "bg-gray-50 border border-gray-300 text-gray-900",
              "text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500",
              "block w-full p-2.5",
          ) %>
        </div>
        <%= f.submit "Search",
          class: class_names(
            "text-white bg-blue-700 hover:bg-blue-800 focus:ring-4",
            "focus:outline-none focus:ring-blue-300 font-medium",
            "rounded-lg text-sm w-full sm:w-auto px-5 py-2.5",
            "text-center hover:cursor-pointer",
          ) %>
      </div>
    <% end %>

    <div id="map-container">
      <div id="map"></div>
    </div>
  </div>
</div>
